<!DOCTYPE html>
<html>

<head>
    <style>
        .slideshow {
            position: relative;
            width: 100%;
            padding-top: 43.25%;
            /* Relação de aspecto de 16:9 (altura/largura) */
            overflow: hidden;
        }

        .slideshow img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .slideshow img.active {
            opacity: 1;
        }
    </style>
</head>

<body>

    <div class="slideshow">
        <img src="https://s2-g1.glbimg.com/urgjHqqNtopUaHHHg7JDqhVCy2A=/1200x/smart/filters:cover():strip_icc()/i.s3.glbimg.com/v1/AUTH_59edd422c0c84a879bd37670ae4f538a/internal_photos/bs/2018/s/R/wBf6bCQz6twVwLZ7t4Og/governador-ricardo-na-entrevista-do-hospital-do-bem-em-patos-foto-jose-marques-4-.jpg"
            alt="Imagem 1" class="active">
        <img src="https://uenp.edu.br/media/k2/galleries/2386/_DSC8981.JPG" alt="Imagem 2">
        <img src="https://static.portaldacidade.com/unsafe/https://s3.amazonaws.com/marica.portaldacidade.com/img/news/2021-05/hospital-che-guevara-os-numeros-de-uma-luta-bem-sucedida-608e76d0e8870.jpeg"
            alt="Imagem 3">
    </div>

    <script>
        var currentIndex = 0;
        var slides = document.getElementsByClassName("slideshow")[0].getElementsByTagName("img");

        function showSlide(index) {
            for (var i = 0; i < slides.length; i++) {
                slides[i].classList.remove("active");
            }
            slides[index].classList.add("active");
        }

        function nextSlide() {
            currentIndex++;
            if (currentIndex >= slides.length) {
                currentIndex = 0;
            }
            showSlide(currentIndex);
        }

        setInterval(nextSlide, 2000); // Tempo de exibição de cada imagem em milissegundos
    </script>

</body>

</html>


